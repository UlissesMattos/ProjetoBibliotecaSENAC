@model Usuario

@{
    ViewData["Title"] = "Cadastro de Usuário";
}

<h1 class="row justify-content-md-center">Cadastre um novo Usuário</h1>
<div class="row justify-content-md-center">
    <form asp-action="RegistrarUsuarios" method="POST" class="col-md-4">
        <fieldset>
            <div class="form-group">
                <label asp-for="Nome">Nome</label>
                <input asp-for="Nome" class="form-control" required />
            </div>
            <div class="form-group">
                <label asp-for="Login">Login</label>
                <input asp-for="Login" class="form-control" required />
            </div>
            <div class="form-group">
                <label asp-for="Senha">Senha</label>
                <input asp-for="Senha" class="form-control" required />
            </div>
            <div class="form-group">
                <label asp-for="Tipo">Tipo</label>
                <select name="Tipo" id="userTipo" class="form-control" required>
                    <option></option>
                    <option value="@Usuario.ADMIN">Administrador</option>
                    <option value="@Usuario.PADRAO">Padrão</option>
                </select>
            </div>
        </fieldset>
        <p></p>

        <input type="submit" value="Cadastrar" />
    </form>
</div>